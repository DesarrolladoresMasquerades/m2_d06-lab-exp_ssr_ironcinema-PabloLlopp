<div class="movies-list">

    {{#each movies}}
    <div class="movie-display">
        <a href="/movies/{{_id}}/details"><img src="{{image}}" alt="cover-image" class="image-hover"></a>
        {{title}}
        <a href="/movies/{{_id}}/details">See more</a>
    </div>
    {{/each}}

</div>